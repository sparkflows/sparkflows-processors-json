    {"name": "autoOffsetReset", "value":"latest", "widget": "textfield", "title": "auto.offset.reset", "description": "Auto Offset Reset"},
    {"name": "enableAutoCommit", "value":"true", "widget": "textfield", "title": "enable.auto.commit", "description": "Enable Auto Commit"},

    {"name": "kafkaParamsKeys", "value":"[]", "widget": "key_array",
