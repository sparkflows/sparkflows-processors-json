    {"name": "brokers", "value":"localhost:9092", "widget": "textfield", "title": "Kafka Brokers", "description": "Kafka Brokers"},
    {"name": "group", "value":"my-consumer-group", "widget": "textfield", "title": "Consumer Group", "description": "Consumer Group"},
    {"name": "topics", "value":"topic1", "widget": "textfield", "title": "Kafka Topics",
