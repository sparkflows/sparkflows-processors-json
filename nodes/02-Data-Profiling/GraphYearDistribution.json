  "name": "Graph Year Distribution",
  "description":"This node Finds the distribution of Years from Date values" ,
  "type": "transform",
  "nodeClass": "fire.nodes.graph.NodeGraphYearDistribution",
  "fields" : [
  	{"name":"title", "value":"Year Distribution", "widget": "textfield", "title": "Title"},
    {"name":"graphType", "value":"1", "widget": "enum", "title": "Chart Type",
          "optionsMap":{"LINECHART":"Line Chart","COLUMNCHART":"Side by Side Bar Chart",
                       "BARCHART":"Stacked Bar Chart", "PIE":"Pie Chart"}, "description" : "input graph type"},
    {"name":"yCols", "value":"[]", "widget": "variables", "title": "Y Columns",
                        "datatypes":["string", "date", "timestamp"],"description":"input to y axis"}
